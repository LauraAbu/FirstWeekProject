<div class="row">
  <table class="table table-hover">

      <thead>
          <tr>
              <th>First Name</th>
              <th>Last Name</th>
              <th>Email</th>
              <th>Phone</th>
              <th>Actions</th>
          </tr>
      </thead>
      <tbody>
          @{ var index = 0;}
          @foreach (var contact in Model)
          {
              <tr>
                  <td>@contact.Name</td>
                  <td>@contact.LastName</td>
                  <td>@contact.EmailAddress</td>
                  <td>@contact.Phone</td>
                  <td> <a href="Contact/Details/@index"> View </a> </td>
                  @{index ++;}
              </tr>
          }
      </tbody>
  </table>
</div>


   
